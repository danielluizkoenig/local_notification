<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/notification/db" VERSION="20251029" COMMENT="XMLDB file for Moodle local/notification"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="notification" COMMENT="Notification configurations">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course_id" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="notification_query_id" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="time" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="subject" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="content" TYPE="text" NOTNULL="true"/>
        <FIELD NAME="status" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="days_after" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="course_id" TYPE="foreign" FIELDS="course_id" REFTABLE="course" REFFIELDS="id"/>
        <KEY NAME="notification_query_id" TYPE="foreign" FIELDS="notification_query_id" REFTABLE="notification_query" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="notification_query" COMMENT="SQL queries for notifications">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="description" TYPE="text" NOTNULL="true"/>
        <FIELD NAME="query" TYPE="text" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="notification_history" COMMENT="History of sent notifications">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="notification_id" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="user_id" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="delivered" TYPE="int" LENGTH="10"/>
        <FIELD NAME="timeaccess" TYPE="int" LENGTH="10"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="notification_id" TYPE="foreign" FIELDS="notification_id" REFTABLE="notification" REFFIELDS="id"/>
        <KEY NAME="user_id" TYPE="foreign" FIELDS="user_id" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="notification_files" COMMENT="Files attached to notifications">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="notification_id" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="fileid" TYPE="int" LENGTH="10" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="notification_id" TYPE="foreign" FIELDS="notification_id" REFTABLE="notification" REFFIELDS="id"/>
        <KEY NAME="fileid" TYPE="foreign" FIELDS="fileid" REFTABLE="files" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>